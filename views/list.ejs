<%- include("header"); -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% for(var i=0; i< newListItem.length ; i++) {%>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" id="checkbox_id<%= String(i) %>" name="checkbox" onChange="this.form.submit()" value="<%=newListItem[i]._id%>">
                    <p>
                        <label for="checkbox_id<%= String(i) %>">
                            <%= newListItem[i].name %>
                        </label>
                    </p>
                </div>
                <input type="hidden" name="currentList" value="<%= listTitle %>">
            </form>
            <% } %>

                <form class="item" action="/" method="POST">
                    <label for="input"></label>
                    <input type="text" name="input" id="input" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="button" value=<%=listTitle %> >+</button>
                </form>
    </div>
    <%- include("footer"); -%>